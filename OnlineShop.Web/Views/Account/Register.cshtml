@model OnlineShop.Core.DTOs.User.RegisterViewModel

@{
    ViewData["Title"] = "عضویت در سایت";
}

<div class="breadcrumb-holder">
    <!-- Content Row -->
    <div class="row">
        <ul class="breadcrumbs small-12 medium-8 large-8 columns">
            <li><a href="/">فروشگاه آنلاین رویا</a></li>
            <li><a>@ViewData["Title"]</a></li>
        </ul>
    </div>
    <!-- End Content Row -->
</div>
<div class="row bottom-margin featured-row">

    <h1>@ViewData["Title"]</h1>
    <div class="fr-border"></div>
    <!-- Contact form -->
    <div class="small-12 small-centered medium-7 medium-uncentered large-7 large-uncentered columns">
        <form asp-action="Register" class="form" method="post">

            <div class="input-group" style="margin-top: 15px;">
                <span class="input-group-addon"><i>نام و نام خانوادگی:</i></span>
                <input asp-for="FullName" type="text" class="form-control"/>
            </div>

            <div class="input-group" style="margin-top: 15px;">
                <span class="input-group-addon"><i>نام کاربری:</i></span>
                <input asp-for="UserName" type="text" class="form-control"/>
            </div>

            <div class="input-group" style="margin-top: 15px;">
                <span class="input-group-addon"><i>ایمیل:</i></span>
                <input asp-for="Email" type="email" class="form-control"/>
            </div>

            <div class="input-group" style="margin-top: 15px;">
                <span class="input-group-addon"><i>موبایل:</i></span>
                <input asp-for="PhoneNumber" type="text" class="form-control"/>
            </div>

            <div class="input-group" style="margin-top: 15px;">
                <span class="input-group-addon"><i>کلمه عبور:</i></span>
                <input asp-for="Password" type="password" class="form-control"/>
            </div>

            <div class="input-group" style="margin-top: 15px;">
                <span class="input-group-addon"><i>تکرار کلمه عبور:</i></span>
                <input asp-for="ConfirmedPassword" type="password" class="form-control"/>
            </div>

            <div class="btn-link" style="margin-top: 15px;">
                <a href="login"> <i class="glyphicon-link"></i> ورود به سایت </a>
            </div>

            <div style="margin-top: 15px;">
                <button class="btn-group btn-sm btn-success">عضویت در سایت</button>
            </div>
            
            <div asp-validation-summary="All" style="margin-top: 15px;"></div>
        </form>
    </div>
   
    <div class="clearing"></div>
</div>

