@model OnlineShop.Core.DTOs.User.ResetPasswordViewModel
@{
    ViewData["Title"] = "ایجاد کلمه عبور جدید";
}

<div class="breadcrumb-holder">
    <!-- Content Row -->
    <div class="row">
        <ul class="breadcrumbs small-12 medium-8 large-8 columns">
            <li><a href="/">فروشگاه آنلاین رویا</a></li>
            <li><a>@ViewData["Title"]</a></li>
        </ul>
    </div>
    <!-- End Content Row -->
</div>
<div class="row bottom-margin featured-row">

    <h1>@ViewData["Title"]</h1>
    <div class="fr-border"></div>
    <!-- Contact form -->
    <div class="small-12 small-centered medium-7 medium-uncentered large-7 large-uncentered columns">
        <form asp-action="ResetPassword" asp-controller="Account" class="form" method="post">

            <input type="hidden" asp-for="ActiveCode"/>

            <div class="input-group" style="margin-top: 15px;">
                <span class="input-group-addon"><i>کلمه عبور:</i></span>
                <input asp-for="Password" type="password" class="form-control"/>
            </div>

            <div class="input-group" style="margin-top: 15px;">
                <span class="input-group-addon"><i>تکرار کلمه عبور:</i></span>
                <input asp-for="ConfirmedPassword" type="password" class="form-control"/>
            </div>
            <div style="margin-top: 15px;">
                <button class="btn-group btn-sm btn-success">ایجاد کلمه عبور جدید</button>
            </div>

            <div asp-validation-summary="All" style="margin-top: 15px;"></div>
        </form>
    </div>
</div>