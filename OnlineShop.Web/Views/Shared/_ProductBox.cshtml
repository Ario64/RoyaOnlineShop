@model OnlineShop.Core.DTOs.Product.ShowProductListItemViewModel

<!-- Item -->
<div class="small-8 medium-4 small-centered medium-uncentered large-4 large-uncentered columns f-product">
  
    <a href="/showproduct/@Model.ProductId"><img src="/product/images/@Model.ImageName" alt="" /></a>
    <!-- Product Link -->
    <div class="product-link text-center">
        <a href="/showproduct/@Model.ProductId">@Model.ProductName</a>
    </div>
    <!-- Product Rating -->
    <div class="f-productrating">
        <i class="icon-star"></i>
        <i class="icon-star"></i>
        <i class="icon-star"></i>
        <i class="icon-star"></i>
        <i class="icon-star"></i>
    </div>
    <!-- End Product Rating -->
    <!-- Product Price -->
    <div class="f-product-price">
        @Model.Price تومان
    </div>
    <!-- Add to Cart Buttons -->
    <div class="f-product-hover">
        <div class="f-button">
            <a href="/product/addtocart/@Model.ProductId"><i class="icon-cart"></i></a>
        </div>
    </div>
    <!-- End Add to Cart Buttons -->
</div>
<!-- End item -->
