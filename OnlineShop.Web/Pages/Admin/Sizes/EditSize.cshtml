@page "{id}"
@model OnlineShop.Web.Pages.Admin.Sizes.EditSizeModel
@{
    ViewData["Title"] = "ویرایش سایز";
}
<div class="col-lg-12">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Size.SizeId" />
        <div class="col-lg-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    اطلاعات سایز
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان سایز</label>
                        <input type="text" asp-for="@Model.Size.SizeName" class="form-control"/>
                    </div>

                    <div class="form-group">
                        <label>شرح سایز</label>
                        <input type="text" asp-for="@Model.Size.Description" class="form-control"/>
                    </div>
                    <button type="submit" class="btn btn-group-lg btn-success">ویرایش</button>
                    <div asp-validation-summary="All"></div>
                </div>
            </div>
        </div>
    </form>
</div>
