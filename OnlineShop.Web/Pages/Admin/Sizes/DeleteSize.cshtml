@page "{id}"
@model OnlineShop.Web.Pages.Admin.Sizes.DeleteSizeModel
@{
    ViewData["Title"] = "حذف سایز";
}
<div class="col-lg-12">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
<div class="container alert alert-danger">
    <form method="post">
        <input asp-for="Size.SizeId" type="hidden" />
        <h2>آیا از حذف سایز "@Model.Size.SizeName" مطمئن هستید؟</h2>
        <p>
            <input type="submit" value="حذف سایز" class="btn btn-sm btn-danger" />
            <a asp-page="Index" class="btn btn-sm btn-outline btn-info">انصراف</a>
        </p>
    </form>
</div>