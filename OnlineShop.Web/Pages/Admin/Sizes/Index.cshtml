@page
@using OnlineShop.DataLayer.Entities.Product
@model OnlineShop.Web.Pages.Admin.Sizes.IndexModel
@{
    ViewData["Title"] = "لیست اندازه ها";
}
<div class="col-lg-12">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewData["Title"]
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body col-md-12">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div style="margin: 10px 0px;">
                            <a asp-page="CreateSize" class="btn btn-outline btn-success">افزودن سایز جدید</a>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>سایز</th>
                                    <th>شرح سایز</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Size size in Model.Sizes)
                                {
                                    <tr>
                                        <td>@size.SizeName</td>
                                        <td>@size.Description</td>
                                        <td>
                                            <a href="/admin/sizes/editsize/@size.SizeId" class="btn btn-xs btn-warning">ویرایش</a> 
                                            <a href="/admin/sizes/deletesize/@size.SizeId" class="btn btn-xs btn-danger">حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>