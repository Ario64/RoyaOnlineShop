@page "{id}"
@model OnlineShop.Web.Pages.Admin.Groups.DeleteGroupModel
@{
    ViewData["Title"] = "حذف گروه";
}
<div class="col-lg-12">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
<div class="container alert alert-danger">
    <form method="post">
        <input asp-for="Group.ProductGroupId" type="hidden" />
        <input asp-for="Group.GroupTitle" type="hidden" />
        <h2>آیا از حذف نقش "@Model.Group.GroupTitle" مطمئن هستید؟</h2>
        <p>
            <input type="submit" value="حذف گروه" class="btn btn-sm btn-danger" />
            <a asp-page="Index" class="btn btn-sm btn-outline btn-info">انصراف</a>
        </p>
    </form>
</div>