@page "{id}"
@model OnlineShop.Web.Pages.Admin.Groups.EditGroupModel
@{
    ViewData["Title"] = "ویرایش گروه";
}
<div class="col-lg-12">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
<div class="row">
    <form method="post">
        <input type="hidden" asp-for="Group.ParentId" />
        <input type="hidden" asp-for="Group.ProductGroupId" />
        <div class="col-lg-11">
            <div class="panel panel-default">
                <div class="panel-heading">
                     ویرایش گروه
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان گروه</label>
                        <input type="text" asp-for="Group.GroupTitle" class="form-control">
                    </div>
                    <div>
                        <button type="submit" class="btn btn-group-lg btn-success">ویرایش</button>
                        <div asp-validation-summary="All"></div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>