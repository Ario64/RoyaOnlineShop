@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using OnlineShop.Core.Convertors
@using OnlineShop.DataLayer.Entities.Order
@model OnlineShop.Web.Pages.Discounts.IndexModel
@{
    ViewData["Title"]="لیست کدهای تخفیف";
}
<div class="col-lg-12">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewData["Title"]
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body col-md-12">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div style="margin: 10px 0px;">
                            <a asp-page="CreateDiscount" class="btn btn-outline btn-success">افزودن کد تخفیف جدید</a>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                            <tr>
                                    <th>کد تخفیف</th>
                                    <th>درصد تخفیف</th>
                                    <th>تعداد</th>
                                    <th>تاریخ شروع</th>
                                    <th>تاریخ پایان</th>
                                    <th>دستورات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (Discount discount in Model.Discounts)
                            {
                                <tr>
                                        <td>@discount.DiscountCode</td>
                                    <td>@discount.DiscountPercent</td>
                                        <td>@discount.UsableCount</td>
                                        <td>@discount.StartDate?.ToShamsi()</td>
                                        <td>@discount.EndDate?.ToShamsi()</td>
                                        <td>
                                        <a href="/admin/discounts/editdiscount/@discount.DiscountId" class="btn btn-xs btn-warning">ویرایش</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>