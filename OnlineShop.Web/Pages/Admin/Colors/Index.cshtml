@page
@using OnlineShop.DataLayer.Entities.Product
@model OnlineShop.Web.Pages.Admin.Colors.IndexModel
@{
    ViewData["Title"] = "لیست رنگ ها";
}
<div class="col-lg-12">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewData["Title"]
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body col-md-12">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div style="margin: 10px 0px;">
                            <a asp-page="AddColor" class="btn btn-outline btn-success">افزودن رنگ جدید</a>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                            <tr>
                                <th>رنگ</th>
                                <th>دستورات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (Color color in Model.Colors)
                            {
                                <tr>
                                        <td>@color.ColorName</td>
                                    <td>
                                        <a href="/admin/colors/editcolor/@color.ColorId" class="btn btn-xs btn-warning">ویرایش</a>
                                        <a href="/admin/colors/deletecolor/@color.ColorId" class="btn btn-xs btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
