@page
@using OnlineShop.DataLayer.Entities.User
@model OnlineShop.Web.Pages.Admin.Users.AddUserModel
@{
    ViewData["Title"] = "افزودن کاربر جدید";
    List<Role> roles = ViewData["Roles"] as List<Role>;
}
<div class="col-lg-12">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-lg-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    اطلاعات کاربر
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>نام ونام خانوادگی</label>
                        <input type="text" asp-for="CreateUser.FullName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>نام کاربری</label>
                        <input type="text" asp-for="CreateUser.UserName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>ایمیل</label>
                        <input type="email" asp-for="CreateUser.Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>موبایل</label>
                        <input type="number" asp-for="CreateUser.PhoneNumber" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>کلمه عبور</label>
                        <input type="text" asp-for="CreateUser.Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>آدرس</label>
                    <textarea type="text" rows="7" asp-for="CreateUser.Address" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label>نقش ها</label>
                        @foreach (Role role in roles)
                        {
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="selectedRoles" value="@role.RoleId">@role.RoleTitle
                                </label>
                            </div>
                        }
                    </div>
                    <button type="submit" class="btn btn-group-lg btn-success">ذخیره اطلاعات</button>
                    <div asp-validation-summary="All"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="panel panel-info">
                <div class="panel-heading">
                    تصویر پروفایل
                </div>
                <div class="panel-body">
                    <img class="thumbnail" id="img" src="/useravatar/DefaultAvatar.jpg" style="max-width: 350px; max-height: 550px;" />
                    <div class="form-group">
                        <label>انتخاب تصویر</label>
                        <input type="file" id="imgInp" asp-for="CreateUser.UserAvatar" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts
{
    <script>
        imgInp.onchange = evt => {
            const [file] = window.imgInp.files;
            if (file) {
                window.img.src = URL.createObjectURL(file);
            }
        }
    </script>
}