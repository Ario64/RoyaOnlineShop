@page
@using OnlineShop.Core.Convertors
@using OnlineShop.Core.DTOs.User
@model OnlineShop.Web.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "لیست کاربران سایت";
}
<div class="col-lg-12">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewData["Title"]
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row" style="margin-bottom: 10px;">
                            <form>
                                <div class="col-md-4">
                                    <input class="form-control" type="text" placeholder="نام کاربری" name="filterUserName" />
                                </div>
                                <div class="col-md-4">
                                    <input class="form-control" type="text" placeholder="ایمیل" name="filterEmail" />
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary">جستجو</button>
                                    <a href="/admin/users" class="btn btn-outline btn-info">بازگشت به صفحه پیش فرض</a>
                                </div>
                            </form>
                        </div>
                        <div style="margin: 10px 0px;">
                            <a href="/admin/users/adduser" class="btn btn-outline btn-success">افزودن کاربر جدید</a>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام و نام خانوادگی</th>
                                    <th>نام کاربری</th>
                                    <th>ایمیل</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ ثبت نام</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.UsersForAdmin.Users)
                                {
                                    <tr>
                                        <td>@user.FullName</td>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <p style="color: green;">
                                                    فعال
                                                </p>
                                            }
                                            else
                                            {
                                                <p style="color: red;">
                                                    غیرفعال
                                                </p>
                                            }
                                        </td>
                                        <td>@user.RegisterDate.ToShamsi()</td>
                                        <td>
                                            <a class="btn btn-xs btn-warning">ویرایش</a>
                                            <a class="btn btn-xs btn-danger">حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row text-center">
                            <div class="col-sm-12">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">
                                        @for (int i = 1; i <= Model.UsersForAdmin.PageCount; i++)
                                        {
                                            <li class="paginate_button @((i==Model.UsersForAdmin.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/admin/users?pageid=@i">@i</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
